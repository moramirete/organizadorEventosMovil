<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F4F7"
    tools:context=".MainActivity">

    <View
        android:id="@+id/headerBackground"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="#1E73E8"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gestor de Eventos\nLos Super Nenes"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/headerBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/headerBackground" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHeaderTitle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:id="@+id/formContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="30dp"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:id="@+id/tvFormTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Iniciar Sesión"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#202124"
                        android:layout_marginBottom="24dp"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:id="@+id/groupUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre de Usuario"
                            android:textColor="#5F6368"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <EditText
                            android:id="@+id/etUsername"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:background="@drawable/bg_input"
                            android:hint="Ej: SuperNene01"
                            android:paddingHorizontal="16dp"
                            android:inputType="textPersonName"
                            android:textColor="#202124"
                            android:layout_marginBottom="16dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="#5F6368"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:background="@drawable/bg_input"
                        android:hint="tu@email.com"
                        android:paddingHorizontal="16dp"
                        android:inputType="textEmailAddress"
                        android:textColor="#202124"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contraseña"
                        android:textColor="#5F6368"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:background="@drawable/bg_input"
                        android:hint="********"
                        android:paddingHorizontal="16dp"
                        android:inputType="textPassword"
                        android:textColor="#202124"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:id="@+id/groupConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Confirmar Contraseña"
                            android:textColor="#5F6368"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <EditText
                            android:id="@+id/etConfirmPassword"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:background="@drawable/bg_input"
                            android:hint="********"
                            android:paddingHorizontal="16dp"
                            android:inputType="textPassword"
                            android:textColor="#202124"
                            android:layout_marginBottom="16dp"/>
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnAction"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_button_dark"
                        android:text="Entrar"
                        android:textColor="@android:color/white"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="12dp"/>

                    <TextView
                        android:id="@+id/tvToggleMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="24dp"
                        android:padding="8dp"
                        android:text="¿No tienes cuenta? Regístrate"
                        android:textColor="#1E73E8"
                        android:textStyle="bold"
                        android:textSize="15sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>